{
    "name": "Pomodoro Clock WebApp",
    "version": "0.0.1",
    "manifest_version": 2,
    "minimum_chrome_version": "23",
    "description": "Tiny pomodoro clock. Use any where.",
    "icons": {
        "16": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "app": {
        "background": {
            "scripts": ["js/bg.js"]
        }
    },
    "offline_enabled": true,
    "permissions": [
        "storage",
        "notifications",
        "<all_urls>"
    ]
}
